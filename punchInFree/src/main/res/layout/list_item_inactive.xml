<com.aku.apps.punchin.free.widgets.greendroid.PunchInSubtitleItemView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="?attr/gdSubtitleItemViewStyle"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<RelativeLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent">

		<TextView
		    android:id="@+id/gd_text"
		    style="?attr/gdSubtitleItemViewStyleText"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/imageView1"
		    android:ellipsize="end"
		    android:gravity="bottom|left"
		    android:singleLine="true" android:visibility="gone"/>

		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="16dp"
		    android:src="@drawable/play_button"
		    android:contentDescription="@string/label_empty" android:visibility="gone"/>

		<TextView
		    android:id="@+id/gd_subtitle"
		    style="?attr/gdSubtitleItemViewStyleSubtitle"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/imageView1"
		    android:ellipsize="end"
		    android:gravity="top|left"
		    android:singleLine="true" android:layout_margin="1dp" android:textColor="#fff" android:background="@drawable/timer_action_bar_item" android:text="" android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft" android:paddingBottom="12dp" android:paddingTop="12dp"/>

	</RelativeLayout>

</com.aku.apps.punchin.free.widgets.greendroid.PunchInSubtitleItemView>
